<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.h_ray.library.widget.HConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        app:h_shape_corners_radius="12dp"
        app:h_shape_solid="#e2e2e2">

        <com.h_ray.library.widget.HTextView
            android:id="@+id/shapeTv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="圆角，背景色，边框"
            android:textColor="#fff"
            app:h_shape_corners_radius="12dp"
            app:h_shape_solid="@color/colorPrimary"
            app:h_shape_stroke_color="#000"
            app:h_shape_stroke_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.h_ray.library.widget.HTextView
            android:id="@+id/shapeGradientTv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="渐变颜色"
            android:textColor="#fff"
            app:h_shape_corners_radius="12dp"
            app:h_shape_gradient_angle="0"
            app:h_shape_gradient_end_color="@color/colorAccent"
            app:h_shape_gradient_start_color="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeTv" />

        <com.h_ray.library.widget.HButton
            android:id="@+id/ovalBtn"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="圆形按钮"
            android:textColor="#fff"
            app:h_shape_gradient_angle="0"
            app:h_shape_gradient_end_color="@color/colorAccent"
            app:h_shape_gradient_start_color="@color/colorPrimary"
            app:h_shape_type="oval"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeGradientTv" />

        <com.h_ray.library.widget.HTextView
            android:id="@+id/pressedBgTv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Pressed效果"
            android:textColor="#fff"
            app:h_selector_pressed_solid="@color/colorAccent"
            app:h_selector_pressed_stroke_color="@color/colorPrimary"
            app:h_selector_pressed_stroke_width="2dp"
            app:h_shape_corners_radius="12dp"
            app:h_shape_solid="@color/colorPrimary"
            app:h_shape_stroke_color="@color/colorAccent"
            app:h_shape_stroke_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ovalBtn" />

        <com.h_ray.library.widget.HTextView
            android:id="@+id/pressedColorTv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="文字/按钮颜色Pressed效果"
            android:textColor="#fff"
            app:h_selector_default_text_color="#fff"
            app:h_selector_pressed_text_color="#000"
            app:h_shape_corners_radius="12dp"
            app:h_shape_solid="@color/colorPrimary"
            app:h_shape_stroke_color="@color/colorAccent"
            app:h_shape_stroke_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pressedBgTv" />

        <com.h_ray.library.widget.HButton
            android:id="@+id/radioBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="设置宽高比"
            android:textColor="#fff"
            app:h_aspect_ratio="1"
            app:h_shape_gradient_angle="0"
            app:h_shape_gradient_end_color="@color/colorAccent"
            app:h_shape_gradient_start_color="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pressedColorTv" />

        <com.h_ray.library.widget.HTextView
            android:id="@+id/selectedColorTv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="文字selected效果"
            android:textColor="#fff"
            app:h_selector_default_text_color="#fff"
            app:h_selector_selected_solid="@color/colorAccent"
            app:h_selector_selected_stroke_color="@color/colorPrimary"
            app:h_selector_selected_stroke_width="2dp"
            app:h_selector_selected_text_color="#000"
            app:h_shape_corners_radius="12dp"
            app:h_shape_solid="@color/colorPrimary"
            app:h_shape_stroke_color="@color/colorAccent"
            app:h_shape_stroke_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioBtn" />

        <com.h_ray.library.widget.HTextView
            android:id="@+id/selectedEnableTv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="文字enable效果"
            android:textColor="#fff"
            app:h_selector_default_text_color="#fff"
            app:h_selector_enable_solid="@color/colorAccent"
            app:h_selector_enable_stroke_color="@color/colorPrimary"
            app:h_selector_enable_stroke_width="2dp"
            app:h_selector_selected_text_color="#000"
            app:h_shape_corners_radius="12dp"
            app:h_shape_solid="@color/colorPrimary"
            app:h_shape_stroke_color="@color/colorAccent"
            app:h_shape_stroke_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedColorTv" />

        <com.h_ray.library.widget.HEditText
            android:id="@+id/shapeEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="EditText Shape效果"
            android:textColor="#fff"
            app:h_shape_corners_radius="12dp"
            app:h_shape_solid="@color/colorPrimary"
            app:h_shape_stroke_color="@color/colorAccent"
            app:h_shape_stroke_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectedEnable" />

        <com.h_ray.library.widget.HEditText
            android:id="@+id/shapeFocusedEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="EditText Focused Selector效果"
            android:textColor="#fff"
            app:h_selector_focused_solid="@color/colorAccent"
            app:h_selector_focused_stroke_color="@color/colorPrimary"
            app:h_selector_focused_stroke_width="2dp"
            app:h_shape_corners_radius="12dp"
            app:h_shape_solid="@color/colorPrimary"
            app:h_shape_stroke_color="@color/colorAccent"
            app:h_shape_stroke_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeEt" />

    </com.h_ray.library.widget.HConstraintLayout>

</ScrollView>

